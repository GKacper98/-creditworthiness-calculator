            android:text="Dane o kredycie"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ib1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border2"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:text="Kredyt na remont, modernizacja lub wykończenie nieruchomości"
            android:tooltipText="Remont, modernizacja lub wykończenie nieruchomości"
            app:layout_constraintEnd_toStartOf="@+id/ib2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:srcCompat="@drawable/house2" />

        <ImageButton
            android:id="@+id/ib2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/border2"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:text="Kredyt na zakup domu lub mieszkania"
            android:tooltipText="Zakup domu lub mieszkania"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ib1"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:srcCompat="@drawable/house" />

        <ImageButton
            android:id="@+id/ib3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/border2"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:text="Kredyt na budowę domu"
